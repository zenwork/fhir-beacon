{
    "name": "fhir-beacon",
    "version": "0.1.4",
    "license": "MIT",
    "homepage": "https://fhir-beacon.deno.dev",
    "repository": {
        "url": "https://github.com/zenwork/fhir-beacon.git",
        "type": "git",
        "directory": "packages/library"
    },
    "author": "Florian Hehlen",
    "description": "A library for working with FHIR data in the browser without the need for a backend.",
    "type": "module",
    "browser": "dist/fhir-beacon.js",
    "module": "dist/fhir-beacon.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/**/*",
        "build/web-types.json",
        "README.md"
    ],
    "keywords": [
        "fhir",
        "web components",
        "custom elements",
        "lit",
        "web"
    ],
    "scripts": {
        "build": "vite build && tsc --emitDeclarationOnly",
        "start": "storybook dev -p 9999",
        "test": "HEADLESS=true vitest run",
        "publish": "echo publish",
        "generate-barrels": "barrelsby --delete --config autobarrel.json --location replace --noSemicolon --singleQuotes",
        "manifest::build": "cem analyze --config build/custom-elements-manifest.config.js",
        "manifest::watch": "cem analyze --config build/custom-elements-manifest.config.js --watch",
        "storybook": "storybook dev -p 9999",
        "storybook::build": "storybook build",
        "storybook:clean": "rm -rf node_modules/.cache/storybook",
        "build-storybook": "storybook build",
        "tsc": "tsc",
        "tsc::watch": "tsc --watch",
        "tsc::types": "tsc --emitDeclarationOnly",
        "vite::build": "vite build && tsc --emitDeclarationOnly",
        "vite::dev": "vite",
        "vite::preview": "vite preview",
        "vitest": "HEADLESS=true vitest run",
        "vitest::debug": "vitest watch",
        "vitest::coverage": "NODE_ENV=production HEADLESS=true vitest --coverage",
        "vitest::dev": "NODE_ENV=production HEADLESS=true vitest watch --mode production ",
        "test:browser": "vitest --workspace=vitest.workspace.browser.ts"
    },
    "dependencies": {
        "@lit/context": "^1.1.3",
        "@shoelace-style/shoelace": "^2.19.1",
        "axios": "^1.7.9",
        "jsonpath-plus": "^10.2.0",
        "lit": "^3.2.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@changesets/cli": "^2.27.12",
        "@chromatic-com/storybook": "^3.2.4",
        "@custom-elements-manifest/analyzer": "^0.10.4",
        "@open-wc/semantic-dom-diff": "^0.20.1",
        "@storybook/addon-essentials": "^8.5.0",
        "@storybook/addon-links": "^8.5.0",
        "@storybook/addon-storysource": "^8.5.0",
        "@storybook/blocks": "^8.5.0",
        "@storybook/manager-api": "^8.5.0",
        "@storybook/test": "^8.5.0",
        "@storybook/theming": "^8.5.0",
        "@storybook/web-components": "^8.5.0",
        "@storybook/web-components-vite": "^8.5.0",
        "@testing-library/dom": "^10.4.0",
        "@types/node": "^22.10.7",
        "@types/query-selector-shadow-dom": "^1.0.4",
        "@vitest/browser": "^3.0.2",
        "@vitest/ui": "^3.0.2",
        "@web-types/lit": "^2.0.0-3",
        "@web/dev-server": "^0.4.6",
        "@web/dev-server-esbuild": "^1.0.3",
        "@web/dev-server-rollup": "^0.6.4",
        "@whitespace/storybook-addon-html": "^6.1.1",
        "barrelsby": "^2.8.1",
        "concurrently": "^9.1.2",
        "custom-element-jet-brains-integration": "^1.6.2",
        "dotenv": "^16.4.7",
        "globals": "^15.14.0",
        "html-format": "^1.1.7",
        "lit-html": "^3.2.1",
        "playwright": "^1.49.1",
        "query-selector-shadow-dom": "^1.0.1",
        "remark-gfm": "^4.0.0",
        "shadow-dom-selector": "^5.0.1",
        "shadow-dom-testing-library": "^1.11.3",
        "storybook": "^8.5.0",
        "ts-lit-plugin": "^2.0.2",
        "vite": "^6.0.7",
        "vite-plugin-ts": "^1.3.2",
        "vitest": "^3.0.2",
        "@vitest/coverage-v8": "^3.0.5"
    },
    "publishConfig": {
        "access": "public"
    },
    "web-types": [
        "./build/sl-web-types.json",
        "./build/web-types.json"
    ]
}
